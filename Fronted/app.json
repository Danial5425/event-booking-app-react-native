{
  "expo": {
    "name": "Booking",
    
    "slug": "Booking",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff",
      "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you share them with your friends."
        }
      ]
    ]
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
    "NSCameraUsageDescription": "This app needs access to your camera.",
    "NSPhotoLibraryUsageDescription": "This app needs access to your photo library.",
    "NSLocationWhenInUseUsageDescription": "This app needs access to your location to show nearby events."
  }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.danial.bookingapp",
      "permissions": [
        "CAMERA",
        "MEDIA_LIBRARY",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
